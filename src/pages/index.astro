---
import Head from "../components/eventually/Head.astro";
import Header from "../components/eventually/Header.astro";
import Footer from "../components/eventually/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="is-preload">
    <Header />
    <main style="margin-bottom: 3rem;">
      <div>
        <a
          href="https://ghg-scoutph.vercel.app/"
          class="button"
          style="font-size: larger;"
        >
          Milestone 2 Project
        </a>
      </div>
    </main>
    <footer id="footer">
      <Footer />
    </footer>
    <script src="../scripts/main.js"></script>
    <script src="../scripts/taglines.js"></script>
    <script>
      addEventListener("load", () => {
        if ("serviceWorker" in navigator) {
          navigator.serviceWorker
            .register("/sw.js")
            .then(() => console.log("Service Worker Registered"))
            .catch((err) =>
              console.error("Service Worker Registration Failed", err)
            );
        }
      });
    </script>
  </body>
</html>
